    script(src='/static/js/libs/require.js', data-main='/static/js/config')

    script#tmpl-audio(type='text/template').
      <% if( typeof path !== 'undefined' ) { %>
        <button class="btn-remove">X</button>
        <a href="<%= path %>"><%= name %></a>
      <% } else { %>
        <p><%= name %> uploading</p>
        <div class="progress"></div>
      <% } %>

    script#tmpl-image(type='text/template').
      <% if( typeof path !== 'undefined' ) { %>
        <button class="btn-remove">X</button>
        <img src="<%= path %>" width="120" alt="<%= name %>"/>
      <% } else { %>
        <p><%= name %> uploading</p>
        <div class="progress"></div>
      <% } %>

    script#tmpl-video(type='text/template').
      <% if( typeof path !== 'undefined' ) { %>
        <button class="btn-remove">X</button>
        <a href="<%= path %>"><%= name %></a>
      <% } else { %>
        <p><%= name %> uploading</p>
        <div class="progress"></div>
      <% } %>

